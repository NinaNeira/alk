<div class="login">
    <div class="login__header">
        <div class="row h-100">
            <div class="col-12 align-self-center">
                <h3>Logowanie</h3>
            </div>
        </div>
    </div>
    <div class="login__content d-flex justify-content-center flex-column">
        <div class="row w-100 p-4 justify-content-center">
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <form class="login__content--form">
                    <div class="form-group">
                        <label for="mail">E-mail</label>
                        <input type="email" class="form-control" id="mail" placeholder="E-mail">
                    </div>
                    <div class="form-group">
                        <label for="pass">Hasło</label>
                        <input type="password" class="form-control" id="pass" placeholder="Hasło">
                    </div>
                    <button type="submit" class="btn btn-outline-secondary mt-3">Zaloguj się</button>
                </form>
                <p class="mt-5">Nie masz konta? <a href="/rejestracja">Zarejestruj
                        się.</a></p>
            </div>
        </div>
    </div>
</div>